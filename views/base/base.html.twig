<!DOCTYPE HTML>

<html lang="fr-FR" prefix="og: http://ogp.me/ns#">

    <head>

        <title>{{ CONFIG_SITE_TITRE }}</title>

        <link rel="shortcut icon" type="image/png" href="{{ asset('css/images/favicon.png') }}">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href='http://fonts.googleapis.com/css?family=Roboto:400,700' rel='stylesheet' type='text/css'>

        {% if DEBUG %}
            <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
        {% else %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}">
        {% endif %}

        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <meta charset="UTF-8">
        <meta http-equiv="content-language" content="fr">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

        <meta name="keywords" content="{{ CONFIG_SITE_KEYWORDS | raw }}">
        <meta name="description" content="{{ truncate(CONFIG_SITE_DESCRIPTION, 160) }}">

        <link rel="canonical" href="{{ CONFIG_SITE_URL_PAGE }}">

        <meta property="og:locale" content="fr_FR">
        <meta property="og:language" content="fr">
        <meta property="og:type" content="website">
        <meta property="og:site_name" content="{{ CONFIG_SITE_NOM }}">
        <meta property="og:title" content="{{ CONFIG_SITE_TITRE }}">
        <meta property="og:description" content="{{ truncate(CONFIG_SITE_DESCRIPTION, 160) }}">
        <meta property="og:url" content="{{ CONFIG_SITE_URL_PAGE }}">
        <meta property="og:image" content="{{ CONFIG_SITE_URL ~ CONFIG_SITE_LOGO }}">

        <meta property="article:publisher" content="{{ CONFIG_SITE_FACEBOOK }}">

        <meta name="twitter:card" content="summary">
        <meta name="twitter:description" content="{{ truncate(CONFIG_SITE_DESCRIPTION, 160) }}">
        <meta name="twitter:title" content="{{ CONFIG_SITE_TITRE }}">
        <meta name="twitter:site" content="{{ CONFIG_SITE_TWITTER }}">
        <meta name="twitter:author" content="{{ CONFIG_SITE_TWITTER }}">
        <meta name="twitter:domain" content="{{ CONFIG_SITE_NOM }}">
        <meta name="twitter:image:src" content="{{ CONFIG_SITE_URL ~ CONFIG_SITE_LOGO }}">

    </head>

    <body>

        {% block contenu %}{% endblock %}

        {% if DEBUG %}
            <!-- Chargement des JS non compilÃ©s -->
        {% else %}
            <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
        {% endif %}
        <script type="text/javascript">
            jQuery(function ($) {
                if ($.cookie('cc_cookie_accept') == "cc_cookie_accept") {
                    alert('ANALYTICS');
                }
            });
        </script>

        {% block javascript %}{% endblock %}

    </body>

</html>